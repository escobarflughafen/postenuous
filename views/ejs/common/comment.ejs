<tr id="comment-<%=comment.id%>">
  <th scope="row"><code id="comment-no-<%=comment.id%>">#<%=i%></code></th>
  <td class="comment-table-cell">
    <% if (comment.parentComment) { %>
    <code>&gt; in reply to <a href="#comment-<%=comment.parentComment%>" id="link-to-<%=comment.parentComment%>"><%=comment.parentComment%></a></code>
    <% } %>
    <div>
      <span><%=comment.body%></span>
    </div>
    <div style="font-size: 90%;" class="post-data">
      <% if(comment.author.homepage && comment.author.homepage.length > 0) { %>
        <strong><a href='/redirect/?site=<%=comment.author.homepage%>'><%=comment.author.name%></a></strong>
      <% } else { %>
      <strong><%=comment.author.name%></strong>
      <% } %>
      |
      <%=comment.createdAt.toLocaleString()%>
      |
      <a href="#replyto" id="replyto<%=i%>" value="<%=i%>">reply</a>
      <% if (editable) { %>
      <span>
        |
        <a href="javascript:void(0);" id="comment-remove-link-<%=comment.id%>"
          onclick="toggleComment(this)">remove</a></span>
      <% } %>
    </div>
  </td>
</tr>