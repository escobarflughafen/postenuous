<div class="row" id="post-<%=post.id%>">
  <div class="col-auto" style="margin-bottom: 0.6rem;">
    <div id="caption-<%=post.id%>">
      <h6 style="margin-bottom: 0;">
        <a href="/post/<%=post.id%>" class="post-title kuro">
          <%= post.title %>
        </a>
        <a href="javascript:void(0);" onclick="toggleSign(this, '↓', '↑', true)" id="arrow-<%=post.id%>"
          class="symbol-monospace holo-blue-dark">↓</a>
      </h6>
    </div>

    <div id="collapse-<%=post.id%>" class="collapse" style="margin-bottom: 0;">
      <div class="post-data">
        posted on
        <span class="holo-green-dark">
          <%= post.created.toDateString() %>
        </span>
        by
        <a href="/user/<%=post.author.username %>" class="font-weight-500">
          <%= post.author.name %>
        </a>
        <% if(post.tags.length > 0) { %>
        ・
        <% for(let i=0; i<post.tags.length; i++) { %>
        <a href="/tags/<%=post.tags[i]%>"><%=post.tags[i]%></a>
        <% if(i != post.tags.length-1) { %>
        /
        <% } %>
        <% } %>
        <% } %>
      </div>
      <div class="post-text">
        <span id="abstract-<%=post.id%>"><%= post.abstract %></span>
        <span>
          <a href="/post/<%=post.id%>" class="symbol-monospace">
            →
          </a>
        </span>
      </div>
    </div>

  </div>
</div>